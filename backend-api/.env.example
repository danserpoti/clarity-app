# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Vercel KV Database Configuration
# Get these values from Vercel Dashboard -> Storage -> KV
KV_URL=https://your-kv-database-url.vercel.com
KV_REST_API_TOKEN=your-kv-rest-api-token-here

# Application Configuration
NODE_ENV=development

# Rate Limiting Configuration (optional)
RATE_LIMIT_PER_MINUTE=10

# Usage Limits Configuration (optional)
FREE_PLAN_MONTHLY_LIMIT=30

# Security Configuration (optional)
MAX_CONTENT_LENGTH=5000